generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  user
  admin
}

model User {
  id                     String      @id @default(auto()) @map("_id") @db.ObjectId
  username               String      @unique
  password               String
  email                  String      @unique
  image                  String?
  role                   Role
  alreadyRequested       Json[]
  bookmarkedPropertiesID String[]    @db.ObjectId
  homes                  Residency[] @relation("UserProperties")
  createdAt              DateTime    @default(now())
  updatedAt              DateTime    @updatedAt
}

model Residency {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  price       Int
  address     String   @unique
  city        String
  country     String
  image       String
  facilities  Json
  ownerId     String   @db.ObjectId
  owner       User?    @relation("UserProperties", fields: [ownerId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
